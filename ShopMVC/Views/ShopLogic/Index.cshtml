@model IEnumerable<ShopMVC.Models.StockItem>

<p>
    @Html.ActionLink("Create New", "Create")
   <input type="text" id="Search" name="Search" placeholder="Search">
</p>
<table class="table">
    <tr>
        <th>
            <input type="button" name="Button" value="@Html.DisplayNameFor(model => model.ArticleNumber)"></input>
        </th>
        <th>
            <input type="button" name="Button" value="@Html.DisplayNameFor(model => model.ShelfPosition)"></input>
        </th>
        <th>
            <input type="button" name="Button" value="@Html.DisplayNameFor(model => model.Quantity)"></input>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShelfPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
