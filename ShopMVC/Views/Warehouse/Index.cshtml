@model IEnumerable<ShopMVC.Models.StockItem>

    @Html.ActionLink("Create New", "Create")
    <form>
             <input type="text" name="Search" placeholder="Search" />
    </form>
<table class="table">
    <tr>
        <th>
            <form>
                <input type="submit" name="Sort" value=@Html.DisplayNameFor(model => model.ArticleNumber).ToString() />
            </form>
  
        </th>
        <th>
            <form>
                <input type="submit" name="Sort" value=@Html.DisplayNameFor(model => model.ShelfPosition).ToString() />
            </form>
        </th>
        <th>
            <form>
                <input type="submit" name="Sort" value=@Html.DisplayNameFor(model => model.Quantity).ToString() />
            </form>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ArticleNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShelfPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
